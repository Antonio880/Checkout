<h1>Vendas</h1>
<table class="table table-striped">
  <thead>
    <tr><th>ID</th><th>Curso</th><th>Admin</th><th>Valor (R$)</th><th>Data</th><th>Ações</th></tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.id %></td>
        <td><%= sale.course.title %></td>
        <td><%= sale.admin_user.email %></td>
        <td><%= number_to_currency(sale.amount_cents / 100.0, unit: 'R$') %></td>
        <td><%= sale.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'Ver', admin_sale_path(sale), class: 'btn btn-sm btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>